{
  "name": "hame-relay",
  "version": "1.2.0",
  "description": "MQTT message forwarder between brokers",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "test": "npm run build && node --test --import tsx/esm",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "lint": "prettier --check \"src/**/*.ts\"",
    "lint:fix": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "mqtt": "^5.3.5",
    "node-fetch": "^3.3.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  }
}
